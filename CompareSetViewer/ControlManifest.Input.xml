<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns="http://schemas.microsoft.com/PowerApps/2018/ControlManifest">
  <control namespace="CompareSet" constructor="CompareSetViewer" version="1.0.0">
    <display-name-key>Control_DisplayName</display-name-key>
    <description-key>Control_Description</description-key>

    <!-- Inputs -->
    <property name="oldPdfBase64"  display-name-key="oldPdf_DisplayName"  description-key="oldPdf_Description"  of-type="SingleLine.Text" usage="input" />
    <property name="newPdfBase64"  display-name-key="newPdf_DisplayName"  description-key="newPdf_Description"  of-type="SingleLine.Text" usage="input" />

    <property name="dpi"            display-name-key="dpi_DisplayName"        description-key="dpi_Description"        of-type="Whole.None" usage="input" default-value="144" />
    <property name="gridRows"       display-name-key="gridRows_DisplayName"   description-key="gridRows_Description"   of-type="Whole.None" usage="input" default-value="10" />
    <property name="gridCols"       display-name-key="gridCols_DisplayName"   description-key="gridCols_Description"   of-type="Whole.None" usage="input" default-value="10" />
    <property name="diffThreshold"  display-name-key="diffThreshold_DisplayName" description-key="diffThreshold_Description" of-type="Whole.None" usage="input" default-value="18" />
    <property name="minRegionArea"  display-name-key="minArea_DisplayName"    description-key="minArea_Description"    of-type="Whole.None" usage="input" default-value="64" />
    <property name="strokeWidthPt"  display-name-key="strokeWidth_DisplayName" description-key="strokeWidth_Description" of-type="Decimal" usage="input" default-value="0.8" />
    <property name="overlayAlpha"   display-name-key="overlayAlpha_DisplayName" description-key="overlayAlpha_Description" of-type="Decimal" usage="input" default-value="0.25" />
    <property name="colorRemoved"   display-name-key="colorRemoved_DisplayName" description-key="colorRemoved_Description" of-type="SingleLine.Text" usage="input" default-value="#FF0000" />
    <property name="colorAdded"     display-name-key="colorAdded_DisplayName" description-key="colorAdded_Description" of-type="SingleLine.Text" usage="input" default-value="#00AA00" />

    <!-- Trigger -->
    <property name="runCompare"     display-name-key="runCompare_DisplayName" description-key="runCompare_Description" of-type="TwoOptions" usage="input" />

    <!-- Outputs -->
    <property name="outputPdfBase64" display-name-key="outPdf_DisplayName"   description-key="outPdf_Description"     of-type="SingleLine.Text" usage="output" />
    <property name="diffSummaryJson" display-name-key="diffSummary_DisplayName" description-key="diffSummary_Description" of-type="SingleLine.Text" usage="output" />
    <property name="diffCount"       display-name-key="diffCount_DisplayName" description-key="diffCount_Description"  of-type="Whole.None" usage="output" />
    <property name="status"          display-name-key="status_DisplayName"    description-key="status_Description"     of-type="SingleLine.Text" usage="output" />

    <resources>
      <code path="index.ts" order="1" />
      <resx path="strings/Strings.resx" version="1.0.0" />
    </resources>
  </control>
</manifest>
